<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/lightblue2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.50"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/detailimage"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim15"
                    android:layout_marginTop="@dimen/dim15"
                    android:src="@drawable/beauty" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="198dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="272dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="@dimen/dim15"
                        android:src="@drawable/cardfile" />

                    <TextView
                        android:id="@+id/Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/verylarge"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/dim20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        android:src="@drawable/hkd" />

                    <TextView
                        android:id="@+id/detailcost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim15"
                        android:text="HKD 0.00"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@drawable/red"
                        android:textSize="@dimen/verylarge" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dim20"
            android:layout_marginLeft="@dimen/dim15"
            android:layout_marginRight="@dimen/dim15"
            android:layout_marginTop="@dimen/dim20"
            android:layout_weight="0.34"
            android:background="@drawable/commentbg"
            android:hint="Add new comments...."
            android:textSize="@dimen/dim20" />

        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dim20" >

            <Button
                android:id="@+id/returnbt"
                android:layout_width="36dp"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dpset"
                android:layout_weight="0.28"
                android:background="@drawable/ic_action_done" />

            <Button
                android:id="@+id/trashbt"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dim15"
                android:layout_marginRight="@dimen/leftedit"
                android:layout_marginTop="@dimen/dpset"
                android:layout_weight="0.27"
                android:background="@drawable/ic_action_delete" />

        </LinearLayout>

    </LinearLayout>

</AbsoluteLayout>
